{% extends 'base.html.twig' %}

{% block body %}
    <div class="nk-main">

        {% embed '_common/breadcrumbs.html.twig' %}
            {% block items %}
                {% if location.parent %}
                    <li><a href="{{ path('rpg_location_view', {'slug': location.parent.slug}) }}">{{ location.parent.name }}</a></li>
                {% endif %}
                <li><a href="{{ path('rpg_location_view', {'slug': location.slug}) }}">{{ location.name }}</a></li>
                <li><span>{{ 'role_play.breadcrumbs.creating'|trans }}</span></li>
            {% endblock %}
        {% endembed %}

        <div class="nk-gap-2"></div>

        {% include '_common/alert.html.twig' %}

        <div class="container bg-dark-1">
            {{ form_start(form) }}
                <div class="row head-event" style="background-image: url('https://www.wallpaperup.com/uploads/wallpapers/2015/06/23/731567/86a3298620f3c6ed4a3c5adfd4769a9c.jpg')">
                    <div class="col-12" style="background:rgba(14,14,14,0.5);">{{ form_widget(form.title) }}</div>
                    <div class="col-12" style="background:rgba(14,14,14,0.5);">{{ form_widget(form.description) }}</div>
                </div>
                <div class="col-12 p-30">
                    {{ form_widget(form.content) }}
                </div>
                <div class="col-12 p-15 text-right">
                    <button type="submit" class="nk-btn nk-btn-lg link-effect-4 nk-anchor">{{ submitValue }}</button>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="nk-gap-4"></div>
        <div class="nk-gap-4"></div>
    </div>
{% endblock %}
