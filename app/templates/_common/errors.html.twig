{% if errors is defined and errors is not empty %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                {% for error in errors %}
                    <div class="nk-info-box bg-danger">
                        <div class="nk-info-box-icon">
                            <i class="ion-information-circled"></i>
                        </div>
                        {{ error }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}