{% extends 'base.html.twig' %}

{% block body %}
    <div class="nk-main">

        <div class="nk-gap-2"></div>

        {% include '_common/alert.html.twig' %}


        <div class="container">

            <!-- START: Forums List -->
            <ul class="nk-forum">
                {% for category in categories %}
                    <li>
                        <div class="nk-forum-icon">
                            <span class="ion-ios-game-controller-b"></span>
                        </div>
                        <div class="nk-forum-title">
                            <h3><a href="{{ path('view_category', {'slug': category.slug}) }}">{{ category.name }}</a></h3>
                            <div class="nk-forum-title-sub">{{ category.description }}</div>
                        </div>
                        <div class="nk-forum-count">
                            {{ category.topics|length }} threads
                        </div>
                    </li>
                {% endfor %}
            </ul>

        </div>

        <div class="nk-gap-4"></div>
    </div>
{% endblock %}